<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/cardnews_wrapper"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginRight="8dp"
    android:layout_marginBottom="8dp"
    android:orientation="vertical"
    >

    <ImageView
        android:id="@+id/img_cardnews_thumbnail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:background="@drawable/corner_shape_5dp"/>

    <TextView
        android:id="@+id/cardnews_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/img_cardnews_thumbnail"
        android:layout_alignBottom="@+id/img_cardnews_thumbnail"
        android:layout_alignLeft="@+id/img_cardnews_thumbnail"
        android:layout_alignRight="@+id/img_cardnews_thumbnail"
        android:ellipsize="end"
        android:gravity="left|bottom"
        android:maxLines="2"
        android:paddingLeft="16dp"
        android:paddingBottom="10dp"
        android:text="카드뉴스 제목 카드뉴스 제목 카드뉴스 제목"
        android:textColor="#ffffff"
        android:textSize="14sp" />
</RelativeLayout>