<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/cardnews_wrapper"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/img_cardnews_thumbnail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:adjustViewBounds="true"
        app:srcCompat="@drawable/square_dummy" />

    <TextView
        android:id="@+id/cardnews_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/img_cardnews_thumbnail"
        android:ellipsize="end"
        android:gravity="center"
        android:maxLines="2"
        android:paddingBottom="8dp"
        android:text="Title of news"
        android:textColor="#000000"
        android:textSize="15dp" />
</RelativeLayout>